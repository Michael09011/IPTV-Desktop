{
  "name": "iptv-desktop",
  "version": "0.1.0",
  "description": "Simple IPTV desktop app supporting JSON/M3U/M3U8 playlists",
  "author": "IPTV-Desktop Contributors",
  "main": "src/main.js",
  "scripts": {
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.example.iptv",
    "productName": "IPTV-Desktop",
    "artifactName": "${productName}-${platform}-${version}.${ext}",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-Portable.exe"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.video",
      "icon": "build/icon.icns",
      "artifactName": "${productName}-Mac-${version}.${ext}"
    },
    "icon": "build/icon.icns",
    "dmg": {
      "background": null,
      "iconSize": 80
    },
    "files": [
      "app/**/*",
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "asar": false
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:all": "electron-builder -m -w"
  }
}

